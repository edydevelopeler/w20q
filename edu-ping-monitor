#!/bin/sh

# Alamat web yang akan dicek. Google adalah pilihan yang sangat andal.
TARGET_URL="http://www.google.com"

# Berapa kali pengecekan harus gagal berturut-turut sebelum eksekusi
FAIL_THRESHOLD=2

# Inisialisasi counter kegagalan
fail_count=0

echo "Memulai skrip pemantau koneksi pada $(date)"

# Loop selamanya
while true; do
    # Coba hubungi target URL dengan timeout 5 detik.
    # --head: hanya ambil header, lebih cepat.
    # --fail: anggap error jika status HTTP bukan 2xx.
    if curl -s --head --fail --max-time 5 "$TARGET_URL" > /dev/null; then
        # Jika berhasil, reset counter
        fail_count=0
        echo "[$(date +'%H:%M:%S')] Koneksi ke $TARGET_URL berhasil."
    else
        # Jika gagal, tambahkan counter
        fail_count=$((fail_count + 1))
        echo "[$(date +'%H:%M:%S')] KONEKSI GAGAL! (Percobaan ke-$fail_count dari $FAIL_THRESHOLD)"
    fi

    # Cek apakah sudah mencapai ambang batas kegagalan
    if [ "$fail_count" -ge "$FAIL_THRESHOLD" ]; then
        echo "[$(date +'%H:%M:%S')] AMBANG BATAS GAGAL TERCAPAI! Menjalankan skrip edu --force..."
        
        # Jalankan skrip utama Anda dengan argumen --force
        /usr/bin/edu --force
        
        # Jeda selama 3 menit untuk memberi waktu koneksi pulih sepenuhnya
        echo "[$(date +'%H:%M:%S')] Eksekusi selesai. Menjeda pemantauan selama 3 menit untuk stabilisasi jaringan..."
        sleep 180
        
        # Reset counter setelah eksekusi
        fail_count=0
        echo "[$(date +'%H:%M:%S')] Pemantauan dilanjutkan."
    fi

    # Tunggu 20 detik sebelum melakukan pengecekan lagi
    sleep 20
done
